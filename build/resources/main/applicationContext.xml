<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:property-placeholder location="classpath:application.properties"/>

    <bean id="inventary" class="io.dumasoft.library.InventaryCongressLibrary"/>

    <bean id="libraryBooks" class="io.dumasoft.library.NovelBook">
        <constructor-arg ref="inventary"/>
    </bean>

    <bean id="scienceBooks" class="io.dumasoft.library.ScienceBook">
        <!-- El name siempre es el nombre del método sin el set y en minúscula la primera letra -->
        <property name="publicInventary" ref="inventary" />
    </bean>


    <bean id="philosophyBooks" class="io.dumasoft.library.PhilosophyBook">
        <property name="refSection" value="${ref.philosophy}" />
        <property name="encargado" value="${encargado.philosophy}" />
    </bean>
</beans>